<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>E.M.S</title>
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/df19b88d34.js" crossorigin="anonymous"></script>
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <!-- custom css file -->
    <link rel="stylesheet" href="stylesheets/main.css">
</head>
<body>

    <!-- ====================Start Header Area  ====================-->
    <header class="header_area">
        <div class="main-menu">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" href="/">E.M.S by Kaym Kassai</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
              </nav>
        </div>
    </header>

<!-- END HEADER -->


<!-- START REGISTER FORM -->

<div class="container">
    <!-- <div class="row"> -->
        <h1 style="text-align: center">Registration</h1>
        <div style="width: 60%; margin: 25px auto;">
            <form action="/register" method="post">
                <h4>Personal Infomation:</h4>
                <!-- Personal Stuffs -->
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Full Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Email Address" required>
                </div>
                <div class="form-group">
                    <label for="role">Role:</label>
                    <select class="form-control" name="role" id="role" required>
                      <option>Admin</option>
                    </select>
                  </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <h4>Company Infomation:</h4>

                <!-- Company Stuffs -->
                <div class="form-group">
                    <input class="form-control" type="text" name="companyName" placeholder="Company Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="companyLocation" placeholder="Company Location" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="companySize" placeholder="Company Size" required>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                </div>
                
            </form>
        </div>
    <!-- </div> -->
</div>





