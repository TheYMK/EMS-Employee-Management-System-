<%- include("../../partials/header") %>
	<body class="is-preload">

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Main -->
					<div id="main">
						<div class="inner">

							<!-- Header -->
								<header id="header">
									<a href="#" class="logo"><strong>Login as:</strong> <%= currentUser.username%></a>
									<ul class="icons">
										<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
										<li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
										<li><a href="#" class="icon brands fa-snapchat-ghost"><span class="label">Snapchat</span></a></li>
										<li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
										<li><a href="#" class="icon brands fa-medium-m"><span class="label">Medium</span></a></li>
									</ul>
								</header>

							<!-- Content -->
								<section>
									<header class="main">
										<h1><%= dept.department_name%> Department</h1>
									</header>

									<span class="image main"><img src="<%= dept.department_image %>" alt="" /></span>
                                    <div>
                                        <a href="/homeadmin/departments/<%=dept._id%>/edit" class="button secondary">Edit</a>
                                        <form class="delete-form" action="/homeadmin/departments/<%= dept._id%>?_method=DELETE" method="POST">
                                            <button class="button primary">Delete</button>
                                        </form>
                                    </div>

									<p style="margin-top: 10px;"><%= dept.department_description%></p>
									
									<hr class="major" />

                                    <h2>Employee List</h2>
									<!-- All employees of the department will be displayed here -->
									
									<!-- Table -->
									<div class="table-wrapper" style="margin-top: 30px;">
										<table>
											<thead>
												<tr>
													<th>Employee ID</th>
													<th>Type</th>
													<th>Full Name</th>
													<th>Department</th>
													<th>Designation</th>

												</tr>
											</thead>
											<tbody>
												<% employees.forEach(function(emp){ %>
													<% if(emp.company === currentUser.company_name && emp.department === dept.department_name){ %>
														<tr>
															<td><a href="/homeadmin/employees/<%=emp._id%>"><%= emp.employee_id %></a></td>
															<td><%= emp.type_of_employee%> </td>
															<td><%= emp.first_name%> <%= emp.last_name%></td>
															<td><%= emp.department %></td>
															<td><%= emp.designation %></td>
														</tr>
													<% } %>
												<% }) %>
											</tbody>
										</table>
									</div>

                                    <hr class="major" />

                                    <h2>Projects</h2>
                                    <!-- All assigned project will be displayed here -->

                                    
								</section>

						</div>
					</div>

				<!-- Sidebar -->
				<%- include("../../partials/sidebar") %>

			</div>

		<!-- Scripts -->
			<script src="/js/jquery.min.js"></script>
			<script src="/js/browser.min.js"></script>
			<script src="/js/breakpoints.min.js"></script>
			<script src="/js/util.js"></script>
			<script src="/js/main.js"></script>

	</body>
</html>